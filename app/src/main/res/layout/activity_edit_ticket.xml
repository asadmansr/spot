<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/NoActionBar"
    android:theme = "@style/NoActionBar"
    tools:context="com.spotapp.spot.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        app:srcCompat="@drawable/background" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:text="@string/refundTime"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/next_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/next_btn"
        android:layout_alignEnd="@+id/next_btn"
        android:layout_alignStart="@+id/next_btn"
        android:background="@color/colorAccent"
        android:text="Add Time"
        android:layout_alignLeft="@+id/next_btn"
        android:layout_alignRight="@+id/next_btn" />


    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/progressBar"
        android:layout_alignRight="@id/progressBar"
        android:layout_alignTop="@id/progressBar"
        android:layout_alignBottom="@id/progressBar"
        android:layout_margin="40dp"
        android:background="@drawable/oval"
        android:alpha="0.2"
        />

    <TextView
        android:id="@+id/textView"
        android:textSize="64dp"
        android:textColor="@color/pureWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/next_btn2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="169dp"
        android:text="01:45" />


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/next_btn2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:max="100"
        android:indeterminate="true"
        android:progress="40"
        android:alpha="1"
        android:indeterminateTint="@color/colorPrimaryDark"
        android:progressDrawable="@color/colorPrimary"
        android:progressTint="@color/colorPrimaryDark" />



    <TextView
        android:id="@+id/textView"
        android:textSize="24dp"
        android:textColor="@color/pureWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/next_btn2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="139dp"
        android:text="TIME REMAINING" />

</RelativeLayout>
